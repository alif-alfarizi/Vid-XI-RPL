<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Button Increment -->
    <Button
        android:id="@+id/btnIncrement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/counter_up"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:onClick="onIncrementClick"
        app:layout_constraintBottom_toTopOf="@id/tvCounterValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Counter Value -->
    <TextView
        android:id="@+id/tvCounterValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_initial"
        android:textSize="200sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Button Decrement -->
    <Button
        android:id="@+id/btnDecrement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/counter_down"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:backgroundTint="@color/teal_200"
        android:onClick="onDecrementClick"
        app:layout_constraintTop_toBottomOf="@id/tvCounterValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>