<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#401A1A1A" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#EC4899" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#4D1A1A1A" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#DB2777" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#331A1A1A" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#33EC4899" />
        </shape>
    </item>
</selector>
