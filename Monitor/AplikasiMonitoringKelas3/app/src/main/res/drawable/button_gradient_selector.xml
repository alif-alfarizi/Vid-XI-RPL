<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#DB2777"
                android:centerColor="#9333EA"
                android:endColor="#EA580C"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#EC4899"
                android:centerColor="#A855F7"
                android:endColor="#F97316"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
