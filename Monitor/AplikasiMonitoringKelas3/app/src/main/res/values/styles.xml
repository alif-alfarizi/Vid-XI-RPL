<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Glass Card Styles -->
    <style name="GlassCard">
        <item name="android:background">@drawable/glass_card_background</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="GlassCardElevated">
        <item name="android:background">@drawable/glass_card_elevated</item>
        <item name="android:elevation">12dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/button_gradient_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonSecondary" parent="android:Widget.Material.Button">
        <item name="android:background">@drawable/glass_card_background</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Input Styles -->
    <style name="InputField" parent="android:Widget.Material.EditText">
        <item name="android:background">@drawable/input_background_selector</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextHeading1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextHeading2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextHeading3">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextBody1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextBody2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextCaption">
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Badge Styles -->
    <style name="BadgeSuccess">
        <item name="android:background">@drawable/badge_success</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="BadgeDanger">
        <item name="android:background">@drawable/badge_danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="BadgeWarning">
        <item name="android:background">@drawable/badge_warning</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>
